// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(cuid())
  email              String        @unique
  name               String
  password           String
  events             Event[]
  sentRequests       SwapRequest[] @relation("Requester")
  receivedRequests   SwapRequest[] @relation("RequestedUser")
  googleAccessToken  String?
  googleRefreshToken String?
  googleTokenExpiry  DateTime?
  googleCalendarId   String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model Event {
  id            String         @id @default(cuid())
  title         String
  startTime     DateTime
  endTime       DateTime
  status        String         @default("BUSY") // BUSY, SWAPPABLE, SWAP_PENDING
  ownerId       String
  owner         User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  mySlotRequests SwapRequest[] @relation("MySlot")
  theirSlotRequests SwapRequest[] @relation("TheirSlot")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model SwapRequest {
  id             String         @id @default(cuid())
  status         String         @default("PENDING") // PENDING, ACCEPTED, REJECTED
  requesterId    String
  requester      User           @relation("Requester", fields: [requesterId], references: [id], onDelete: Cascade)
  requestedUserId String
  requestedUser  User           @relation("RequestedUser", fields: [requestedUserId], references: [id], onDelete: Cascade)
  mySlotId       String         @unique
  mySlot         Event          @relation("MySlot", fields: [mySlotId], references: [id], onDelete: Cascade)
  theirSlotId    String         @unique
  theirSlot      Event          @relation("TheirSlot", fields: [theirSlotId], references: [id], onDelete: Cascade)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

